#!/bin/bash

function help() {
  echo "\
word-stat <path>

stat the word under <path>, output the result like:
12 I
40 java
<num> <word>

NOTE:
Best practise is: word-stat <path> > /tmp/tmp.file
Because write the text one by one, that is a big cost.
I make a test, it is: 3.7s vs 10.8s
"
}

getopts ":h" option;
case $option in
  h)
    help
    exit
    ;;
esac

path=.
if [ $# -ge 1 ]; then
  path=$1
fi

grep -rh -o "\w*" "$path" |\
 sort |\
 awk '
  BEGIN { last=""; time=0 }

  {
    if(last != $0){
      if (time > 0) print time" "last;
      time=0;
    }
    last = $0;
    time = time + 1;
  }

  END { if (time > 0) print time" "last; }
  '